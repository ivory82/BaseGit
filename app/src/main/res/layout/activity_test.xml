<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/mainDrawLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="end">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lyRoot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/a555"
                tools:context=".view.test.TestActivity">

                <!-- Top bar -->
                <include
                    layout="@layout/toolbar_top"
                    android:id="@+id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/lyMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnCharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="충전"
                            style="@style/Widget.AppCompat.Button.Colored"/>

                        <Button
                            android:id="@+id/btnDynamicLink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="동적링크"
                            style="@style/Widget.AppCompat.Button.Colored"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btnSensor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="센서:쉐이크"
                            style="@style/Widget.AppCompat.Button.Colored"/>

                        <ImageView
                            android:id="@+id/ivSensor"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:background="@color/black"/>

                    </LinearLayout>




                    <Button
                        android:id="@+id/btnMotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모션레이아웃"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                    <Button
                        android:id="@+id/btnPopUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="팝업 : ProgressBar, AlertDialog, Lotti"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                    <Button
                        android:id="@+id/btnImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이미지 : Glide, Circle Image"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                    <Button
                        android:id="@+id/btnPermission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="권한 : TedPermission"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                    <Button
                        android:id="@+id/btnPermission2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="권한 : Need Permission"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnDB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DB : Realm, SharedPref"
                            style="@style/Widget.AppCompat.Button.Colored"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가로테스트"
                            android:textColor="@color/black"
                            android:rotation="90"/>

                    </LinearLayout>



                    <Button
                        android:id="@+id/btnNetwork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="통신 : Retrofit2"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                    <Button
                        android:id="@+id/btnWebView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="웹뷰 : 기본 스키마 구현"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnAppShortcut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="숏컷 : 동적 ( Dynamic )"
                            style="@style/Widget.AppCompat.Button.Colored"/>

                        <Button
                            android:id="@+id/btnAppPinShortcut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="숏컷 : 고정( Pin )"
                            style="@style/Widget.AppCompat.Button.Colored"/>

                    </LinearLayout>



                    <Button
                        android:id="@+id/btnCreateImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이미지인코딩 테스트 "
                        style="@style/Widget.AppCompat.Button.Colored"/>


                    <Button
                        android:id="@+id/btnGPS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gps: LocationManager, GooglePlayService "
                        style="@style/Widget.AppCompat.Button.Colored"/>


                    <ImageView
                        android:id="@+id/ivTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_launcher_background"/>
                    <ImageView
                        android:id="@+id/ivTest2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_launcher_background"/>


                </LinearLayout>
            </LinearLayout>

        </ScrollView>



        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nvMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="false"
            app:headerLayout="@layout/nav_header_main"
            app:menu="@menu/activity_main_drawer" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/developer"
                android:textColor="@color/textBlack66"
                android:textSize="12dp"
                android:layout_marginBottom="28dp"
                android:layout_gravity="bottom|center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company"
                android:textColor="@color/textBlack66"
                android:textSize="12dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom|center_horizontal"/>

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>